<h1>All Books</h1>

<% @books.each do |book| %>
  <ul>
    <li><img src=<%= book.thumbnail %>></li>
    <li><%= link_to book.title, book_path(book) %></li>
    <% book.authors.each do |author| %>
      <li><%= link_to author.name, author_path(author) %></li>
    <% end %>
    <li><%= book.pages %></li>
    <li><%= book.year_published %></li>
  </ul>
<% end %>
