<h1>Review for <%= @book.title %></h1>

<%= form_for @book_review do |f| %>
  <p>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </p>
  <p>
    <%= f.label :rating %>
    <%= f.number_field :rating %>
  </p>
  <p>
    <%= f.label :review_headline %>
    <%= f.text_field :review_headline %>
  </p>
  <p>
    <%= f.label :review_body   %>
    <%= f.text_field :review_body  %>
  </p>
  <p>
    <%= hidden_field_tag :book_id, params[:book_id] %>

  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>
